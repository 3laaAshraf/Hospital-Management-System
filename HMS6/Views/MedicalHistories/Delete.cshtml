@model HMS6.Models.MedicalHistory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MedicalHistory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Date Of Visit :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfVisitPatToDoc)
        </dd>
        <dt class = "col-sm-2">
            Diagnosis :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diagnosis)
        </dd>
        <dt class = "col-sm-2">
            Follow-Up Date :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FollowUpDate)
        </dd>
        <dt class = "col-sm-2">
            Doctor :
        </dt>
        <dd class = "col-sm-10">
           {@Html.DisplayFor(model => model.Doctor.DoctorId)} @Html.DisplayFor(model => model.Doctor.DoctorName)
        </dd>
        <dt class = "col-sm-2">
            Patient :
        </dt>
        <dd class = "col-sm-10">
            {@Html.DisplayFor(model => model.Patient.PatientId)} @Html.DisplayFor(model => model.Patient.PatientName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicalHistoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
