@model IEnumerable<HMS6.Models.Doctor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Notification"/>
<h1>Doctor List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New</a>
</p>
@foreach (var item in Model) {
    <div class="alert alert-dismissible alert-primary">
        <h1>@Html.DisplayFor(modelItem => item.DoctorName)</h1>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DoctorId">Edit</a> |
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.DoctorId">Details</a>
    </div>
}

