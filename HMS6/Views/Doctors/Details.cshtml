@model HMS6.Models.Doctor


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="alert alert-dismissible alert-primary">
    <h4>@Html.DisplayFor(model => model.DoctorName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Doctor Id :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorId)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            Departement :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departement.DepartementName)
        </dd>
        <hr />
         <dt class = "col-sm-2">
           Patients :
        </dt>
        <dd class = "col-sm-10">
        @foreach(var patient in Model.Patients){    
            <th>
                { @Html.DisplayFor(modelPatient => patient.PatientName) }  
            </th>
        } </dd>
        <hr />
         <dt class = "col-sm-2">
            Appointments :
        </dt>
        <dd class = "col-sm-10">
        @foreach (var appointment in Model.Appointments){    
                <th>
                     { @Html.DisplayFor(modelAppointment => appointment.AppointmentDate) }  
                </th>
        } </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.DoctorId">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

