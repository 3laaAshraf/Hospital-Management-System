@model IEnumerable<HMS6.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Notification"/>
<h1>Rooms List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@foreach (var item in Model) {
     <div class="alert alert-dismissible alert-primary">
         <h1>@Html.DisplayFor(modelItem => item.RoomNumber)</h1>
          <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
          <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.RoomId">Details</a>              
     </div>
}

