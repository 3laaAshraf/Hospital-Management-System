@model HMS6.Models.Appointment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            Status :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentsStatus)
        </dd>
        <dt class = "col-sm-2">
            Doctor :
        </dt>
        <dd class = "col-sm-10">
            {@Html.DisplayFor(model => model.Doc.DoctorId)} @Html.DisplayFor(model => model.Doc.DoctorName)
        </dd>
        <dt class = "col-sm-2">
            Patient :
        </dt>
        <dd class = "col-sm-10">
            {@Html.DisplayFor(model => model.Pat.PatientId)} @Html.DisplayFor(model => model.Pat.PatientName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
